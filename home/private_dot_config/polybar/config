[module/date]
type = internal/date

; Seconds to sleep between updates
interval = 1.0

label = %date% %time%

; time format
time = %H:%M
date = %a

; if `date-alt` or `time-alt` is defined, clicking
; the module will toggle between formats
date-alt = "%A, %d %B %Y"
time-alt = ÔÅì %H:%M:%S

