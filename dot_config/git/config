[include]
path = ~/.config/git/user

[alias]
d = diff HEAD --patch-with-stat --summary
follow = log -p --follow --
l = log --stat --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
ll = log -p --stat --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
last = log --decorate=full --stat -1 HEAD
ls = ls-tree --full-tree -r --name-only HEAD
p = push origin HEAD:refs/for/master
s = status -sb
undopush = push -f origin HEAD^:master
unstage = reset HEAD --

[color]
ui = true

[commit]
gpgsign = true

[core]
excludesfile = ~/.config/git/ignore
autocrlf = input
whitespace = trailing-space,space-before-tab
editor = lvim
pager = diff-so-fancy | less --tabs=4 -RFX

[credential]
helper = store --file ~/.cache/git/secrets

[diff]
renames = copies

[filter "lfs"]
clean = git-lfs clean -- %f
smudge = git-lfs smudge -- %f
required = true
process = git-lfs filter-process

[gc]
auto = 1

[http]
sslVerify = false

[init]
defaultBranch = main

[interactive]
diffFilter = diff-so-fancy --patch

[merge]
stat = true

[pull]
ff = only

[push]
default = simple

[url "https://github.com"]
insteadOf = git://github.com

[color "diff-highlight"]
oldNormal = red bold
oldHighlight = red bold 52
newNormal = green bold
newHighlight = green bold 22

[color "diff"]
meta = 11
frag = magenta bold
func = 146 bold
commit = yellow bold
old = red bold
new = green bold
whitespace = red reverse
